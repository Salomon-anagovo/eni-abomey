<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Inscription | ENI Abomey</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f9f9f9;
      padding: 2rem;
    }
    form {
      max-width: 700px;
      margin: auto;
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    h1 {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    label {
      display: block;
      margin-top: 1rem;
      font-weight: bold;
    }
    input, select, textarea {
      width: 100%;
      padding: 10px;
      margin-top: .5rem;
      border: 1px solid #ccc;
      border-radius: 6px;
    }
    .inline {
      display: flex;
      gap: 1rem;
    }
    .inline > div {
      flex: 1;
    }
    .error, .success {
      margin-bottom: 1rem;
      text-align: center;
      font-weight: bold;
    }
    .error { color: red; }
    .success { color: green; }
    button {
      margin-top: 1.5rem;
      width: 100%;
      padding: 1rem;
      background: #2c3e50;
      color: white;
      font-weight: bold;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <form action="/inscription" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">
    <h1>Formulaire d'inscription</h1>

    <% if (typeof success !== 'undefined') { %>
      <p class="success"><%= success %></p>
    <% } %>
    <% if (typeof error !== 'undefined') { %>
      <p class="error"><%= error %></p>
    <% } %>

    <label for="nom">Nom</label>
    <input type="text" name="nom" value="<%= typeof formData !== 'undefined' ? formData.nom : '' %>" required>

    <label for="prenom">Prénom</label>
    <input type="text" name="prenom" value="<%= typeof formData !== 'undefined' ? formData.prenom : '' %>" required>

    <label for="email">Email</label>
    <input type="email" name="email" id="email" value="<%= typeof formData !== 'undefined' ? formData.email : '' %>" required>

    <div class="inline">
      <div>
        <label for="pays">Pays</label>
        <select id="pays" name="pays" required>
          <option value="">-- Sélectionnez un pays --</option>
        </select>
      </div>
      <div>
        <label for="indicatif">Indicatif</label>
        <input type="text" id="indicatif" name="indicatif" value="<%= typeof formData !== 'undefined' ? formData.indicatif : '' %>" readonly>
      </div>
      <div>
        <label for="telephone">Téléphone</label>
        <input type="tel" name="telephone" id="telephone" pattern="\\d{6,15}" value="<%= typeof formData !== 'undefined' ? formData.telephone : '' %>" required>
      </div>
    </div>

    <div class="inline">
      <div>
        <label for="dateNaissance">Date de naissance</label>
        <input type="date" name="dateNaissance" value="<%= typeof formData !== 'undefined' ? formData.dateNaissance : '' %>" required>
      </div>
      <div>
        <label for="lieuNaissance">Lieu de naissance</label>
        <input type="text" name="lieuNaissance" value="<%= typeof formData !== 'undefined' ? formData.lieuNaissance : '' %>" required>
      </div>
    </div>

    <label for="photo">Photo de profil</label>
    <input type="file" name="photo" accept="image/*" required>

    <label for="documents">Documents (PDF, JPG, PNG)</label>
    <input type="file" name="documents" multiple accept=".pdf,.jpg,.png">

    <label for="password">Mot de passe</label>
    <input type="password" name="password" minlength="6" required>

    <label for="role">Rôle</label>
    <select name="role" required>
      <option value="eleve">Élève</option>
      <option value="formateur">Formateur</option>
      <option value="administration">Administration</option>
      <option value="autres">Autres</option>
    </select>

    <div>
      <label>
        <input type="checkbox" name="conditions" required>
        J’accepte les <a href="#">conditions d’utilisation</a>
      </label>
    </div>

    <button type="submit">S'inscrire</button>
  </form>

  <script>
    const indicatifs = {
      "Bénin": "+229", "France": "+33", "Côte d’Ivoire": "+225",
      "Togo": "+228", "Sénégal": "+221", "Mali": "+223", "Niger": "+227",
      "Burkina Faso": "+226", "Cameroun": "+237", "Canada": "+1",
      "USA": "+1", "RDC": "+243", "Rwanda": "+250", "Algérie": "+213",
      "Maroc": "+212", "Tunisie": "+216", "Afrique du Sud": "+27"
    };

    const paysSelect = document.getElementById('pays');
    const indicatifInput = document.getElementById('indicatif');

    for (const [pays, indicatif] of Object.entries(indicatifs)) {
      const option = document.createElement('option');
      option.value = pays;
      option.textContent = pays;
      if ("<%= typeof formData !== 'undefined' ? formData.pays : '' %>" === pays) option.selected = true;
      paysSelect.appendChild(option);
    }

    paysSelect.addEventListener('change', () => {
      indicatifInput.value = indicatifs[paysSelect.value] || '';
    });

    function validateForm() {
      const email = document.getElementById('email').value;
      const tel = document.getElementById('telephone').value;

      const emailPattern = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/;
      const phonePattern = /^\d{6,15}$/;

      if (!emailPattern.test(email)) {
        alert('Email invalide.');
        return false;
      }
      if (!phonePattern.test(tel)) {
        alert('Numéro de téléphone invalide.');
        return false;
      }

      return true;
    }
  </script>
</body>
</html>
