<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Inscription | ENI Abomey</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f9f9f9;
      padding: 2rem;
    }
    form {
      max-width: 700px;
      margin: auto;
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    h1 {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    label {
      display: block;
      margin-top: 1rem;
      font-weight: bold;
    }
    input, select, textarea {
      width: 100%;
      padding: 10px;
      margin-top: .5rem;
      border: 1px solid #ccc;
      border-radius: 6px;
    }
    .inline {
      display: flex;
      gap: 1rem;
    }
    .inline > div {
      flex: 1;
    }
    .error {
      color: red;
      margin-bottom: 1rem;
      text-align: center;
    }
    button {
      margin-top: 1.5rem;
      width: 100%;
      padding: 1rem;
      background: #2c3e50;
      color: white;
      font-weight: bold;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <form action="/inscription" method="POST" enctype="multipart/form-data">
    <h1>Formulaire d'inscription</h1>

    <% if (typeof error !== 'undefined') { %>
      <p class="error"><%= error %></p>
    <% } %>

    <label for="nom">Nom</label>
    <input type="text" name="nom" required>

    <label for="prenom">Prénom</label>
    <input type="text" name="prenom" required>

    <label for="email">Email</label>
    <input type="email" name="email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" title="Entrez une adresse email valide.">

    <div class="inline">
      <div>
        <label for="pays">Pays</label>
        <input type="text" id="pays" name="pays" list="paysList" placeholder="Choisir ou saisir un pays" required>
        <datalist id="paysList">
          <option value="Bénin"></option>
          <option value="France"></option>
          <option value="Côte d’Ivoire"></option>
          <option value="Togo"></option>
          <option value="Sénégal"></option>
          <option value="Mali"></option>
          <option value="Niger"></option>
          <option value="Burkina Faso"></option>
          <option value="Cameroun"></option>
          <option value="Canada"></option>
          <option value="USA"></option>
          <option value="RDC"></option>
          <option value="Rwanda"></option>
          <option value="Algérie"></option>
          <option value="Maroc"></option>
          <option value="Tunisie"></option>
          <option value="Afrique du Sud"></option>
        </datalist>
      </div>
      <div>
        <label for="indicatif">Indicatif</label>
        <input type="text" id="indicatif" name="indicatif" readonly>
      </div>
      <div>
        <label for="telephone">Téléphone</label>
        <input type="tel" name="telephone" id="telephone" pattern="\\d{6,15}" required title="Entrez un numéro valide.">
      </div>
    </div>

    <div class="inline">
      <div>
        <label for="dateNaissance">Date de naissance</label>
        <input type="date" name="dateNaissance" required>
      </div>
      <div>
        <label for="lieuNaissance">Lieu de naissance</label>
        <input type="text" name="lieuNaissance" required>
      </div>
    </div>

    <label for="photo">Photo de profil</label>
    <input type="file" name="photo" accept="image/*" required>

    <label for="documents">Documents (PDF, JPG, PNG)</label>
    <input type="file" name="documents" multiple accept=".pdf,.jpg,.png">

    <label for="password">Mot de passe</label>
    <input type="password" name="password" required minlength="6">

    <label for="role">Rôle</label>
    <select name="role" required>
      <option value="eleve">Élève</option>
      <option value="formateur">Formateur</option>
      <option value="administration">Administration</option>
      <option value="autres">Autres</option>
    </select>

    <div>
      <label>
        <input type="checkbox" name="conditions" required>
        J’accepte les <a href="#">conditions d’utilisation</a>
      </label>
    </div>

    <button type="submit">S'inscrire</button>
  </form>

  <script>
    const indicatifs = {
      "Bénin": "+229",
      "France": "+33",
      "Côte d’Ivoire": "+225",
      "Togo": "+228",
      "Sénégal": "+221",
      "Mali": "+223",
      "Niger": "+227",
      "Burkina Faso": "+226",
      "Cameroun": "+237",
      "Canada": "+1",
      "USA": "+1",
      "RDC": "+243",
      "Rwanda": "+250",
      "Algérie": "+213",
      "Maroc": "+212",
      "Tunisie": "+216",
      "Afrique du Sud": "+27"
    };

    const paysInput = document.getElementById('pays');
    const indicatifInput = document.getElementById('indicatif');
    const telInput = document.getElementById('telephone');

    // Fonction pour mettre à jour l'indicatif
    function updateIndicatif() {
      const selectedPays = paysInput.value;
      indicatifInput.value = indicatifs[selectedPays] || '';
    }

    // Mettez à jour l'indicatif quand l'utilisateur saisit ou sélectionne un pays
    paysInput.addEventListener('input', updateIndicatif);
    paysInput.addEventListener('change', updateIndicatif);

    // Validation du numéro de téléphone
    telInput.addEventListener('input', () => {
      if (!telInput.value.startsWith(indicatifInput.value)) {
        telInput.setCustomValidity("Le numéro doit commencer par l'indicatif.");
      } else {
        telInput.setCustomValidity('');
      }
    });
  </script>
</body>
</html>
