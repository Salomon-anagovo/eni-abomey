<footer class="bg-dark text-white pt-4 pb-3 mt-auto">
  <div class="container">
      <div class="row g-4">
          <!-- Colonne 1 : A propos -->
          <div class="col-lg-3 col-md-6">
              <h5 class="text-uppercase mb-3">À propos</h5>
              <p class="small text-muted">
                  GestionScolaire est une plateforme complète de gestion des établissements scolaires.
              </p>
              <div class="social-icons mt-3">
                  <a href="#" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                  <a href="#" class="text-white me-2"><i class="bi bi-twitter"></i></a>
                  <a href="#" class="text-white me-2"><i class="bi bi-linkedin"></i></a>
                  <a href="#" class="text-white"><i class="bi bi-youtube"></i></a>
              </div>
          </div>

          <!-- Colonne 2 : Liens rapides -->
          <div class="col-lg-3 col-md-6">
              <h5 class="text-uppercase mb-3">Liens rapides</h5>
              <ul class="list-unstyled">
                  <li class="mb-1"><a href="/faq" class="text-muted small">FAQ</a></li>
                  <li class="mb-1"><a href="/blog" class="text-muted small">Blog</a></li>
                  <li class="mb-1"><a href="/contact" class="text-muted small">Contact</a></li>
                  <li class="mb-1"><a href="/privacy" class="text-muted small">Confidentialité</a></li>
                  <li><a href="/terms" class="text-muted small">Conditions d'utilisation</a></li>
              </ul>
          </div>

          <!-- Colonne 3 : Contact -->
          <div class="col-lg-3 col-md-6">
              <h5 class="text-uppercase mb-3">Contact</h5>
              <address class="small text-muted">
                  <i class="bi bi-geo-alt-fill me-2"></i> 123 Rue de l'Éducation, 75000 Paris<br>
                  <i class="bi bi-telephone-fill me-2"></i> 01 23 45 67 89<br>
                  <i class="bi bi-envelope-fill me-2"></i> contact@gestion-scolaire.fr
              </address>
          </div>

          <!-- Colonne 4 : Newsletter -->
          <div class="col-lg-3 col-md-6">
              <h5 class="text-uppercase mb-3">Newsletter</h5>
              <p class="small text-muted">Abonnez-vous pour recevoir les dernières actualités.</p>
              <form class="mb-2">
                  <div class="input-group">
                      <input type="email" class="form-control form-control-sm" placeholder="Votre email">
                      <button class="btn btn-primary btn-sm" type="submit">
                          <i class="bi bi-send"></i>
                      </button>
                  </div>
              </form>
              <div class="form-check form-switch small">
                  <input class="form-check-input" type="checkbox" id="consentCheck">
                  <label class="form-check-label text-muted" for="consentCheck">
                      J'accepte de recevoir des emails
                  </label>
              </div>
          </div>
      </div>

      <hr class="my-4 border-secondary">

      <div class="row align-items-center">
          <div class="col-md-6 text-center text-md-start">
              <p class="small mb-0">&copy; <%= new Date().getFullYear() %> GestionScolaire. Tous droits réservés.</p>
          </div>
          <div class="col-md-6 text-center text-md-end">
              <p class="small mb-0">
                  Version <%= appVersion %> | 
                  <a href="/changelog" class="text-muted">Notes de version</a>
              </p>
          </div>
      </div>
  </div>
</footer>